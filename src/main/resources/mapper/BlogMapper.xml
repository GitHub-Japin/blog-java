<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Blog.dao.BlogMapper">
    <resultMap id="resultMap" type="com.Blog.pojo.Blog">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="created" property="created"/>
    </resultMap>

    <select id="selectIDon0" resultMap="resultMap">
        select
        id
        from 'blog0'
        <where>
            id == #{id}
        </where>
    </select>
    <select id="selectIDon1" resultMap="resultMap">
        select
        id
        from 'blog1'
        <where>
            id == #{id}
        </where>
    </select>
    <select id="selectIDon2" resultMap="resultMap">
        select
        id
        from 'blog2'
        <where>
            id == #{id}
        </where>
    </select>
</mapper>
